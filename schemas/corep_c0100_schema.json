{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "COREP C 01.00 Own Funds Template",
  "type": "object",
  "required": ["template_id", "reporting_entity", "reporting_date", "fields"],
  "properties": {
    "template_id": {
      "type": "string",
      "enum": ["COREP_C_01_00"]
    },
    "reporting_entity": {
      "type": "string"
    },
    "reporting_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "field_name", "value", "unit", "rule_references"],
        "properties": {
          "code": {
            "type": "string",
            "enum": ["010", "020", "030", "040"]
          },
          "field_name": {
            "type": "string"
          },
          "value": {
            "type": "number"
          },
          "unit": {
            "type": "string",
            "enum": ["GBP"]
          },
          "rule_references": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}
